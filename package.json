{
  "name": "supply-chain-dapp",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start:ganache": "npm run copy-contract-build && ng serve --proxy-config proxy.conf.js -c ganache-dev",
    "start:vmware": "npm run copy-contract-build && ng serve --proxy-config proxy.conf.js -c vmware-dev --host 0.0.0.0",
    "build": "npm run copy-contract-build && ng build --prod",
    "deploy:dev": "truffle migrate --reset --network=development && npm run copy-contract-build",
    "copy-contract-build": "rm -rf ./src/assets/contracts && cp -r ./build/contracts ./src/assets/contracts",
    "test": "npm run copy-contract-build && ng test  --watch=false",
    "test:travis": "npm run copy-contract-build && ng test --watch=false",
    "truffle:test:ganache": "truffle test ./test/Orders.js && truffle test ./test/Order.js && truffle test ./test/Upgrade.js",
    "truffle:test:vmware": "truffle test ./test/Orders.js --network=vmware && truffle test ./test/Order.js --network=vmware && truffle test ./test/Upgrade.js --network=vmware",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "compile:server": "webpack --config webpack.server.config.js --progress --colors",
    "serve:ssr": "node dist/server",
    "build:ssr": "npm run build:client-and-server-bundles && npm run compile:server",
    "build:client-and-server-bundles": "ng build --prod  && ng run supply-chain-dapp:server:production",
    "postinstall": "node patch.js",
    "verify_contracts:vmware": "node verify/verify.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^7.2.9",
    "@angular/common": "^7.2.9",
    "@angular/compiler": "^7.2.9",
    "@angular/core": "^7.2.9",
    "@angular/forms": "^7.2.9",
    "@angular/http": "^7.2.9",
    "@angular/platform-browser": "^7.2.9",
    "@angular/platform-browser-dynamic": "^7.2.9",
    "@angular/platform-server": "^7.2.9",
    "@angular/router": "^7.2.9",
    "@clr/angular": "^1.1.2",
    "@clr/icons": "^1.1.2",
    "@clr/ui": "^1.1.2",
    "@nguniversal/express-engine": "^7.1.1",
    "@nguniversal/module-map-ngfactory-loader": "0.0.0",
    "@ngx-translate/core": "^11.0.1",
    "@ngx-translate/http-loader": "^4.0.0",
    "@webcomponents/custom-elements": "^1.0.0",
    "core-js": "^2.6.5",
    "express": "^4.15.2",
    "httpheaderprovider": "^0.3.4",
    "pako": "^1.0.10",
    "rxjs": "~6.4.0",
    "truffle-contract": "^4.0.11",
    "tslib": "^1.9.0",
    "web3": "0.20.7",
    "zone.js": "~0.8.26",
    "zos-lib": "1.4.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.13.0",
    "@angular/cli": "~7.3.3",
    "@angular/compiler-cli": "^7.2.9",
    "@angular/language-service": "^7.2.9",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^8.9.5",
    "codelyzer": "~4.3.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.4.0",
    "ts-loader": "^5.2.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.13.0",
    "typescript": "~3.2.4",
    "webpack-cli": "^3.1.0"
  }
}
